FLASK_ENV=development
FLASK_DEBUG=True
# Set the canonical DB path to the `instance/` folder to avoid per-process
# relative-path mismatches. Copy to `.env` and edit for production.
DATABASE_URL=sqlite:///instance/betting.db
JWT_SECRET_KEY=your-secret-key-change-this
BITCOIN_NETWORK=testnet
BITCOIN_PRIVATE_KEY=your-bitcoin-private-key
WEBHOOK_SECRET=your-webhook-secret

# Football API Configuration (API-Football from RapidAPI)
# Get your key from: https://rapidapi.com/api-sports/api-api-football
FOOTBALL_API_KEY=79aca53494msha094fad54e08bf5p1e73cajsn39ec2e60af2a
FOOTBALL_API_ENABLED=true

# Redis Configuration (for Celery and WebSocket)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
SOCKETIO_MESSAGE_QUEUE=redis://localhost:6379/0

# Email Configuration (Optional - for sending registration and password change confirmations)
# If not configured, emails will be logged instead of sent
# For Gmail: You need to use an "App Password" not your regular password
# Generate one at: https://myaccount.google.com/apppasswords

SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=ABKBet

